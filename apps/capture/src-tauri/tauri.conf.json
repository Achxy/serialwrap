{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "SerialWarp Capture",
  "version": "0.1.0",
  "identifier": "com.serialwarp.capture",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "SerialWarp Capture",
        "width": 800,
        "height": 650,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 700,
        "minHeight": 550
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns"
    ],
    "macOS": {
      "minimumSystemVersion": "12.3",
      "entitlements": "Entitlements.plist",
      "frameworks": [],
      "exceptionDomain": null
    }
  }
}

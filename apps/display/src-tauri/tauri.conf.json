{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "SerialWarp Display",
  "version": "0.0.1-alpha.1",
  "identifier": "com.serialwarp.display",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1421",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "SerialWarp Display",
        "width": 1024,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENDQjI5OEIwMjkwOEY2Q0EKUldUSzlnZ3BzSml5ekhJK2tydkFTTm11Q0RJQXZLdXlJQ2gzMWtQdFN4ME41ZktIZGYwcExnSDQK",
      "endpoints": [
        "https://github.com/Achxy/serialwrap/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "createUpdaterArtifacts": true,
    "windows": {
      "certificateThumbprint": null,
      "timestampUrl": null,
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "nsis": {
        "installMode": "currentUser"
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0", "libayatana-appindicator3-1"]
      },
      "rpm": {
        "depends": ["webkit2gtk4.1", "gtk3", "libappindicator-gtk3"]
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}
